{
  "name": "@cloneoverflow/backend",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "build": "tsc && tsc-alias",
    "start:dev": "dotenvx run -f .env.dev -- nodemon src/index.ts",
    "start:prod": "dotenvx run -f .env.prod -- node dist/index.js",
    "test:unit": "dotenvx run -f .env.test -- jest --config=jest.config.json --runInBand --logHeapUsage",
    "test:docker": "dotenvx run -f .env.test -- bash scripts/test.sh",
    "prod:db:generate": "dotenvx run -f .env.prod -- npx prisma generate",
    "dev:db:generate": "dotenvx run -f .env.dev -- npx prisma generate",
    "test:db:generate": "dotenvx run -f .env.test -- npx prisma generate",
    "prod:db:sync": "dotenvx run -f .env.prod -- npx prisma db push",
    "dev:db:sync": "dotenvx run -f .env.dev -- npx prisma db push --skip-generate",
    "test:db:sync": "dotenvx run -f .env.test -- npx prisma db push --skip-generate"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.11.19",
    "@types/nodemailer": "^6.4.15",
    "@types/supertest": "^6.0.2",
    "jest": "^29.7.0",
    "nodemon": "^3.0.3",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.4",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.10",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@cloneoverflow/common": "^1.0.25",
    "@dotenvx/dotenvx": "^1.7.0",
    "@prisma/client": "^5.10.2",
    "@types/mongoose": "^5.11.96",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "google-auth-library": "^9.14.0",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^6.9.14",
    "prisma": "^5.21.1",
    "redis": "^4.7.0",
    "reflect-metadata": "^0.2.1"
  }
}
