{
  "name": "@cloneoverflow/backend",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "build": "tsc -p tsconfig-build.json && tsc-alias",
    "start:dev": "dotenvx run -f ./environment/.env.dev -- nodemon src/index.ts",
    "start:prod": "dotenvx run -f ./environment/.env.dev -- node dist/index.js",
    "db:generate:dev": "dotenvx run -f ./environment/.env.dev -- npx prisma generate",
    "db:generate:prod": "npx prisma generate",
    "db:generate:test": "dotenvx run -f ./environment/.env.test -- npx prisma generate",
    "db:sync:dev": "dotenvx run -f ./environment/.env.dev -- npx prisma db push",
    "db:sync:prod": "dotenvx run -f ./environment/.env.prod -- npx prisma db push --skip-generate",
    "db:sync:test": "dotenvx run -f ./environment/.env.test -- npx prisma db push --skip-generate",
    "db:migrate:create": "dotenvx run -f ./environment/.env.dev -- npx prisma migrate dev --create-only",
    "db:migrate:push": "dotenvx run -f ./environment/.env.dev -- npx prisma migrate dev",
    "test": "dotenvx run -f ./environment/.env.test -- jest --config=jest.config.json --logHeapUsage --runInBand",
    "test:unit": "dotenvx run -f ./environment/.env.test -- jest --config=jest.config.unit.json --logHeapUsage --runInBand --coverage",
    "test:e2e": "dotenvx run -f ./environment/.env.test -- jest --config=jest.config.e2e.json --logHeapUsage --runInBand",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@eslint/js": "^9.15.0",
    "@jest/globals": "^29.7.0",
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.11.19",
    "@types/nodemailer": "^6.4.15",
    "@types/supertest": "^6.0.2",
    "eslint": "^8.2.0",
    "eslint-plugin-import": "^2.31.0",
    "globals": "^15.12.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.3",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.4",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.10",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.14.0"
  },
  "dependencies": {
    "@cloneoverflow/common": "^1.0.25",
    "@dotenvx/dotenvx": "^1.7.0",
    "@prisma/client": "^5.10.2",
    "@types/jest": "^29.5.14",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "google-auth-library": "^9.14.0",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^6.9.14",
    "prisma": "^5.21.1",
    "redis": "^4.7.0",
    "reflect-metadata": "^0.2.1",
    "uuid": "^11.0.5"
  }
}
